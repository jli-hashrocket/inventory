<h1>Inventory</h1>
<%= link_to "New Item", new_inventory_path, class: "button radius" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
